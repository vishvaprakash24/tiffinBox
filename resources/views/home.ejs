 <!-- Hero Section -->

 <section class="hero relative p-8">
        
    <div class="container mx-auto flex items-center justify-between">
        <div class="left w-1/2">
            <h1 class="text-6xl mb-4">Premium Quality food for your healthy and daily life.</h1>
            <button class="button font-bold">Order Now</button>
        </div>
        <div class="right w-1/2">
            <img src="/img/hero-img.svg" alt="pizza">
        </div>
        
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">
        Menu Items
    </h1>
    <div class="grid grid-cols-4 gap-[4vw]">

        <% items.forEach(function(item){ %>
            <div class="w-64 py-2">
                <img src="/img/<%= item.image %>" class="h-40 mb-4 mx-auto" alt="item">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= item.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= item.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%=item.price%></span>
                        <button class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% })%>
        

       
    
    </div>
</section>
